{
  "name": "Kwitariusz",
  "version": "2.0.0",
  "description": "System zarzadzania oplatami szkolnymi z raportowaniem, finansami i synchronizacja",
  "main": "main.js",
  "homepage": "./",
  "author": "Studio IGOR",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "dependencies": {
    "better-sqlite3": "^9.6.0",
    "nodemailer": "^6.9.7",
    "pdfkit": "^0.13.0",
    "exceljs": "^4.3.0",
    "axios": "^1.6.0",
    "moment": "^2.29.4"
  },
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  },
  "build": {
    "appId": "com.kwitariusz.app",
    "productName": "Kwitariusz Szkoły",
    "publish": null,
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "src/**/*",
      "public/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Kwitariusz Szkoły"
    }
  }
}
